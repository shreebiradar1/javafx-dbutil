<VBox fx:controller="login.LoginScreenController" prefHeight="370.0" prefWidth="590.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" >
  <children>
      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="372.0" prefWidth="640.0" style="-fx-background-color: CDC1FF;">
         <children>
            <Label fx:id="loginlabel" layoutX="242.0" layoutY="22.0" text="Login" textAlignment="CENTER">
               <font>
                  <Font name="Microsoft Himalaya" size="48.0" />
               </font>
            </Label>
            <Text layoutX="312.0" layoutY="120.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Username or email">
               <font>
                  <Font name="Corbel" size="12.0" />
               </font>
            </Text>
            <TextField fx:id="username" layoutX="313.0" layoutY="124.0" prefHeight="26.0" prefWidth="230.0" />
            <Text layoutX="313.0" layoutY="179.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Password">
               <font>
                  <Font name="Corbel" size="12.0" />
               </font>
            </Text>
            <PasswordField fx:id="password" layoutX="312.0" layoutY="185.0" prefHeight="26.0" prefWidth="230.0" />
            <CheckBox fx:id="remember_me" layoutX="311.0" layoutY="220.0" mnemonicParsing="false" text="Remember me">
               <font>
                  <Font name="Calibri" size="12.0" />
               </font>
            </CheckBox>
            <Label fx:id="errorMessage" layoutX="313.0" layoutY="247.0" prefHeight="26.0" prefWidth="230.0" textAlignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Button fx:id="loginbutton" layoutX="309.0" layoutY="273.0" mnemonicParsing="false" onAction="#loginButtonClick" prefHeight="40.0" prefWidth="237.0" style="-fx-background-color: A294F9;" text="Login">
