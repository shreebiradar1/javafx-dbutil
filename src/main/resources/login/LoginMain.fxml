                  <Font name="Bell MT" size="18.0" />
               </font>
            </Button>
            <Text layoutX="310.0" layoutY="334.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Dont have an account?" />
            <Hyperlink fx:id="signup_Hyperlink" layoutX="431.0" layoutY="317.0" text="Sign up" />
            <ImageView fx:id="photo" fitHeight="205.0" fitWidth="267.0" layoutX="14.0" layoutY="109.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@login%20image.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
  </children>
